# Cost Report
{% set ns = namespace() %}
{%- set ns.total = 0 %}
{%- for ingredient in ingredients %}
{%- set price = db(ingredient.name ~ '/shopping.price_per_unit') * (ingredient.quantity | numeric) %}
* {{ ingredient.name }}: ${{ price | format_price(2) }}
{%- set ns.total = ns.total + price %}
{%- endfor %}

Total: ${{ ns.total | format_price(2) }}
